datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Pooled connection (PgBouncer) for queries
  directUrl = env("DIRECT_URL") // Direct connection for migrations
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String    @id
  name         String
  email        String
  gcash_number String?
  role         UserRole  @default(Client)
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  deleted_at   DateTime?

  teams      TeamMember[]
  activities ActivityLog[]

  @@index([email]) // Email lookup
  @@index([role, deleted_at]) // Role filtering
  @@map("users")
}

model Expense {
  id          String    @id @default(uuid())
  amount      Float
  description String
  note        String?
  paid_by     String
  currency    String
  category    String
  receipt_url String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?

  team_id     String?
  team        Team?        @relation(fields: [team_id], references: [id])
  settlements Settlement[]

  // Monthly Payment Mode Fields
  is_monthly        Boolean   @default(false)
  total_months      Int? // Total number of months for the payment plan
  month_number      Int? // Which month (1, 2, 3, ...) in the series
  parent_expense_id String? // Links child monthly expenses to parent expense
  parent_expense    Expense?  @relation("MonthlyExpenses", fields: [parent_expense_id], references: [id])
  child_expenses    Expense[] @relation("MonthlyExpenses")
  deadline          DateTime? // Payment deadline (for monthly payment expenses only)
  deadline_day      Int? // Day of month for recurring deadline (1-31)

  // Optimized composite indexes for common query patterns
  @@index([team_id, deleted_at, created_at]) // Main listing query
  @@index([team_id, deleted_at]) // Quick team filter
  @@index([paid_by, deleted_at]) // User's expenses
  @@index([parent_expense_id]) // Monthly expense lookup
  @@index([created_at]) // Date sorting
  @@map("expenses")
}

model Settlement {
  id             String         @id @default(uuid())
  expense_id     String
  owed_by        String
  amount_owed    Float
  status         Status
  payment_method PaymentMethod?
  proof_url      String?
  paid_at        DateTime?
  created_at     DateTime       @default(now())
  updated_at     DateTime       @updatedAt
  deleted_at     DateTime?

  expense Expense @relation(fields: [expense_id], references: [id], onDelete: Cascade)

  // Optimized composite indexes for common query patterns
  @@index([expense_id, status, deleted_at]) // Settlement status lookup
  @@index([owed_by, status, deleted_at]) // User's pending debts
  @@index([expense_id, deleted_at]) // Expense settlements
  @@index([status, deleted_at]) // Status filtering
  @@index([created_at]) // Date sorting
  @@map("settlements")
}

enum Status {
  pending
  unconfirmed
  paid
}

enum PaymentMethod {
  CASH
  GCASH
}

enum TeamRole {
  ADMIN
  MEMBER
}

enum UserRole {
  Client
  SuperAdmin
}

model Team {
  id         String        @id @default(uuid())
  name       String
  code       String        @unique
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt
  members    TeamMember[]
  expenses   Expense[]
  activities ActivityLog[]

  @@map("teams")
}

model TeamMember {
  id        String   @id @default(uuid())
  team_id   String
  user_id   String
  role      TeamRole @default(MEMBER)
  joined_at DateTime @default(now())

  team Team @relation(fields: [team_id], references: [id], onDelete: Cascade)
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([team_id, user_id])
  @@index([user_id])
  @@map("team_members")
}

model ActivityLog {
  id         String   @id @default(uuid())
  team_id    String
  user_id    String
  action     String
  details    String
  created_at DateTime @default(now())

  team Team @relation(fields: [team_id], references: [id], onDelete: Cascade)
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([team_id, created_at]) // Team activity timeline
  @@index([user_id, created_at]) // User activity history
  @@map("activity_logs")
}

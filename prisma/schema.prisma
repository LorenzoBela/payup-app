datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String    @id
  name         String
  email        String
  gcash_number String?
  role         UserRole  @default(Client)
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  deleted_at   DateTime?

  teams      TeamMember[]
  activities ActivityLog[]

  @@map("users")
}

model Expense {
  id          String    @id @default(uuid())
  amount      Float
  description String
  paid_by     String
  currency    String
  category    String
  receipt_url String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?

  team_id     String?
  team        Team?     @relation(fields: [team_id], references: [id])
  settlements Settlement[]

  // Monthly Payment Mode Fields
  is_monthly        Boolean   @default(false)
  total_months      Int?      // Total number of months for the payment plan
  month_number      Int?      // Which month (1, 2, 3, ...) in the series
  parent_expense_id String?   // Links child monthly expenses to parent expense
  parent_expense    Expense?  @relation("MonthlyExpenses", fields: [parent_expense_id], references: [id])
  child_expenses    Expense[] @relation("MonthlyExpenses")
  deadline          DateTime? // Payment deadline (for monthly payment expenses only)
  deadline_day      Int?      // Day of month for recurring deadline (1-31)
  
  @@index([team_id, deleted_at])
  @@index([created_at])
  @@index([paid_by])
  @@index([parent_expense_id])
  @@map("expenses")
}

model Settlement {
  id          String    @id @default(uuid())
  expense_id  String
  owed_by     String
  amount_owed Float
  status      Status
  payment_method PaymentMethod?
  proof_url   String?
  paid_at     DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?

  expense     Expense   @relation(fields: [expense_id], references: [id], onDelete: Cascade)

  @@index([expense_id, deleted_at])
  @@index([owed_by])
  @@index([status])
  @@index([created_at])
  @@map("settlements")
}



enum Status {
  pending
  unconfirmed
  paid
}

enum PaymentMethod {
  CASH
  GCASH
}

enum TeamRole {
  ADMIN
  MEMBER
}

enum UserRole {
  Client
  SuperAdmin
}

model Team {
  id         String       @id @default(uuid())
  name       String
  code       String       @unique
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt
  members    TeamMember[]
  expenses   Expense[]
  activities ActivityLog[]

  @@map("teams")
}

model TeamMember {
  id        String   @id @default(uuid())
  team_id   String
  user_id   String
  role      TeamRole @default(MEMBER)
  joined_at DateTime @default(now())

  team Team @relation(fields: [team_id], references: [id], onDelete: Cascade)
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([team_id, user_id])
  @@index([user_id])
  @@map("team_members")
}

model ActivityLog {
  id          String   @id @default(uuid())
  team_id     String
  user_id     String
  action      String
  details     String
  created_at  DateTime @default(now())

  team        Team     @relation(fields: [team_id], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([team_id, created_at])
  @@map("activity_logs")
}
